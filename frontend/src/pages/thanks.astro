---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="max-w-3xl mx-auto space-y-6">
    <div class="card bg-base-200 border border-primary shadow-lg">
      <div class="card-body">
        <h1 class="card-title text-2xl">You’re in.</h1>
        <p class="text-sm opacity-70">
          We’ll send early access invites and feature updates as they land.
        </p>
        <div class="flex flex-wrap gap-3">
          <a href="/" class="btn btn-outline">Back to Home</a>
          <a href="/app" class="btn btn-primary">Open the App</a>
        </div>
      </div>
    </div>
  </div>
</Layout>
