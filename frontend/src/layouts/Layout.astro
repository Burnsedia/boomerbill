---
const title = "BoomerBill"
import "../assets/app.css";
---

<!doctype html>
<html lang="en" data-theme="darksynthwave">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>

  <body class="min-h-screen bg-base-100 text-base-content">
    <!-- App Shell with Drawer -->
    <div class="drawer lg:drawer-open min-h-screen">
      <input id="main-drawer" type="checkbox" class="drawer-toggle" />
      
      <div class="drawer-content flex flex-col">
        <!-- App-wide Navbar -->
        <nav class="navbar w-full bg-base-300 border-b border-base-300 sticky top-0 z-40">
          <div class="flex-none lg:hidden">
            <label for="main-drawer" aria-label="open sidebar" class="btn btn-square btn-ghost drawer-button">
              <!-- Hamburger Icon -->
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linejoin="round" stroke-linecap="round" stroke-width="2" fill="none" stroke="currentColor" class="my-1.5 inline-block size-5">
                <path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"></path>
                <path d="M9 4v16"></path>
                <path d="M14 10l2 2l-2 2"></path>
              </svg>
            </label>
          </div>
          <div class="flex-1 px-4">
            <span class="text-lg font-bold">BoomerBill</span>
            <span class="hidden sm:inline opacity-60 text-sm ml-2">- unpaid tech support tracker</span>
          </div>
        </nav>

        <!-- Main Content -->
        <main class="flex-1 p-4 relative z-30 pointer-events-auto">
          <slot />
        </main>

        <!-- Footer -->
        <footer class="footer footer-center p-3 bg-base-200 text-xs opacity-60">
          <span>This app does not send invoices. Yet.</span>
        </footer>
      </div>

      <!-- Sidebar / Drawer Side -->
      <div class="drawer-side z-50 is-drawer-close:overflow-visible">
        <label for="main-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
        <div id="navigation-sidebar" class="is-drawer-close:w-14 is-drawer-open:w-64 min-h-full bg-base-200">
          <!-- Vue Navigation Component will be mounted here -->
        </div>
      </div>
    </div>
  </body>
</html>

