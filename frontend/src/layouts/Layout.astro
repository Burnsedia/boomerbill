---
const title = "BoomerBill"
import "../assets/app.css";
---

<!doctype html>
<html lang="en" data-theme="darksynthwave">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>

  <body class="min-h-screen bg-base-100 text-base-content">
    <!-- App Shell -->
    <div class="flex min-h-screen flex-col">

      <!-- Top Bar -->
      <header class="navbar bg-base-200 border-b border-base-300 z-20">
        <div class="flex-1">
          <span class="text-lg font-bold tracking-tight">
            BoomerBill
          </span>
        </div>
        <div class="flex-none opacity-60 text-sm">
          unpaid tech support tracker
        </div>
      </header>

      <!-- Main Content -->
      <main class="flex-1 w-full p-4 relative z-30 pointer-events-auto">
        <slot />
      </main>

      <!-- Footer -->
      <footer class="footer footer-center p-3 bg-base-200 text-xs opacity-60">
        <span>
          This app does not send invoices. Yet.
        </span>
      </footer>

    </div>
  </body>
</html>
